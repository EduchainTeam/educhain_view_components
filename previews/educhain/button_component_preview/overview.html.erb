<div class="flex ml-6 mt-3 space-x-4">
  <% schemes.each_key do |scheme| %>
    <div class="flex-col px-3 py-3">
        <div class="mb-4">
          scheme: :<%= scheme%>
        </div>
      <div class="justify-self-center">        
        <% sizes.each_key do |size|%>
          <%= render Educhain::Button::Component.new(text: "Кнопка", size: size.to_sym, scheme: scheme.to_sym) %>
          <p class="text-xs font-semibold leading-none my-1">
            size: :<%= size%>
          </p>
        <% end %>
      </div>
      <div class="mt-4">
        <%= render Educhain::Button::Component.new(text: "Кнопка", size: :m, scheme: scheme.to_sym, icon: 'play-circle-fill') %>
      </div>
      <p class="text-xs font-semibold leading-none my-1">
        icon: 'play-circle-fill'
      </p>
      <div class="mt-4">
        <%= render Educhain::Button::Component.new(text: "Кнопка", size: :m, scheme: scheme.to_sym, class: "hover:shadow-xl hover:underline") %>
      </div>
      <p class="text-xs font-semibold leading-none mt-4">
        class: 'hover:shadow-xl hover:underline'
      </p>
    </div>
  <% end %>
</div>
