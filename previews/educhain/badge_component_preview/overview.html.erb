<table>
  <tr>
    <td></td>
    <% Educhain::Badge::Component::SIZES.keys.each do |size| %>
      <td class="px-3 py-1 text-gray-500 text-center"><%= size.to_s.humanize %></td>
    <% end %>
  </tr>
  <% Educhain::Badge::Component::COLORS.keys.each do |color| %>
    <tr>
      <td class="font-bold px-3 py-1"><%= color.to_s.humanize %></td>
    </tr>
    <tr>
      <td class="text-gray-500 px-3 py-1">None</td>
      <% Educhain::Badge::Component::SIZES.keys.each do |size| %>
        <td class="px-3 py-1">
          <%= render Educhain::Badge::Component.new(name: name, color: color, size: size) %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<div class="mt-8">
  <h6 class="text-gray-500 mb-3 mt-0">
    Predefined values
  </h6>

  <% [Educhain::Badge::Component.yes, Educhain::Badge::Component.no].each do |component| %>
    <%= render component %>
  <% end %>
</div>